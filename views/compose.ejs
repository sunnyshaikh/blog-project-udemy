<%- include("./partials/header") %>
  <h1>Compose</h1>
  <form action="/compose" method="post" class="form">

    <div class="form-group">
      <label for="postTitle">Title</label>
      <input type="text" class="form-control" name="postTitle" id="postTitle" placeholder="Give a title to the post"
        required autocomplete="off">
    </div>

    <div class="form-group">
      <label for="postBody">Post</label>
      <textarea class="form-control" name="postBody" id="postBody" rows="10" placeholder="Add some content..."
        required></textarea>
    </div>

    <button type="submit" name="publish" class="btn btn-primary">Publish</button>

  </form>
  <%- include("./partials/footer") %>